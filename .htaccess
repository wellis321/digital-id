# Root-level .htaccess
# Use this if document root is project root (not public/)

# Enable rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Redirect everything to public/ directory
    # Skip if already in /public/
    RewriteCond %{REQUEST_URI} !^/public/
    # Redirect all requests to /public/
    RewriteRule ^(.*)$ /public/$1 [L]
</IfModule>

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config and env files
<FilesMatch "\.(env|log|ini|conf)$">
    Order allow,deny
    Deny from all
</FilesMatch>

