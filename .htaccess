# Root-level .htaccess
# Use this if document root is project root (not public/)

# Enable rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # First, redirect everything to public/ directory if not already there
    # Skip if already in /public/
    RewriteCond %{REQUEST_URI} !^/public/
    # Redirect all requests to /public/
    RewriteRule ^(.*)$ /public/$1 [L]
</IfModule>

# ErrorDocument directives at root level (paths relative to document root)
ErrorDocument 404 /public/404.php
ErrorDocument 403 /public/403.php
ErrorDocument 500 /public/500.php

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config and env files
<FilesMatch "\.(env|log|ini|conf)$">
    Order allow,deny
    Deny from all
</FilesMatch>

